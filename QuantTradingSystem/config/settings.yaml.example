# 量化交易系统配置示例
# Copy this file to settings.yaml and modify

# CTP配置
ctp:
  broker_id: "9999"
  user_id: ""
  password: ""
  app_id: ""
  auth_code: ""
  td_address: "tcp://180.168.146.187:10101"
  md_address: "tcp://180.168.146.187:10111"

# 天勤量化配置
tqsdk:
  account: ""
  password: ""
  sim: true

# 数据库配置
database:
  postgres:
    host: "localhost"
    port: 5432
    database: "quant_trading"
    user: "postgres"
    password: ""
  
  influxdb:
    url: "http://localhost:8086"
    token: ""
    org: "quant"
    bucket: "market_data"
  
  redis:
    host: "localhost"
    port: 6379
    db: 0

# 风控配置
risk:
  # 仓位限制
  max_position_per_symbol: 100
  max_total_position: 500
  max_position_value: 2000000
  
  # 亏损限制
  max_daily_loss: 50000
  max_drawdown: 0.15
  
  # 订单限制
  max_order_value: 500000
  max_order_volume: 50
  
  # 熔断
  daily_loss_circuit_breaker: 100000
  consecutive_loss_limit: 5

# 策略配置
strategy:
  dual_ma:
    fast_period: 10
    slow_period: 30
    volume: 1
  
  turtle:
    entry_window: 20
    exit_window: 10
    atr_period: 14
  
  momentum:
    lookback_period: 20
    threshold: 0.02

# AI配置
ai:
  # LSTM模型
  lstm:
    sequence_length: 60
    hidden_size: 128
    num_layers: 2
    dropout: 0.2
  
  # 情感分析
  sentiment:
    model_name: "bert-base-chinese"
    use_lexicon: true

# 执行配置
execution:
  default_slippage: 1.0
  max_order_value: 1000000
  twap_interval: 60
  order_timeout: 60

# 交易配置
trading:
  symbols:
    - rb2501
    - i2501
    - hc2501
  
  paper_trading: true
  close_before_end: 300

# 性能目标
performance:
  target_annual_return: 0.30
  target_sharpe_ratio: 2.0
  max_drawdown_limit: 0.15

# 日志配置
logging:
  level: "INFO"
  file: "logs/trading.log"
  rotation: "100 MB"
  retention: "30 days"
